<div class="row" ng-controller="partes"> <!-- combos, boton y galeria> -->

    <div class="col s12 m3 l3"> <!-- combos y boton -->
        
        <div class="row">
           <div class="divider"></div>
        </div>
    
        <div class="browser-default col s12"> <!-- Parte del insecto -->
            <label>Parte del insecto</label>
            <select class="browser-default" ng-model="parte" ng-change="cargarRespuesta()">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="parte in partes" value={{parte.id}}>{{parte.descripcion}}</option>
            </select>
        </div> <!-- Parte del insecto -->
        
        <div class="row">
           <div class="divider"></div>
        </div>
    
        <div class="browser-default col s12"> <!-- Orden -->
            <label>Orden</label>
            <select class="browser-default" ng-model="orden" ng-change="cargarFamilias(orden)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="orden in ordenes" value={{orden.id}}>{{orden.descripcion}}</option>
            </select>
        </div> <!-- Orden -->
    
        <div class="browser-default col s12"> <!-- Familia -->
            <label>Familia</label>
            <select class="browser-default" ng-model="familia" ng-change="cargarGeneros(familia)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="familia in familias" value={{familia.id}}>{{familia.descripcion}}</option>
            </select>
        </div> <!-- Familia -->
    
        <div class="browser-default col s12"> <!-- Género -->
            <label>Género</label>
            <select class="browser-default" ng-model="genero" ng-change="cargarEspecies(genero)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="genero in generos" value={{genero.id}}>{{genero.descripcion}}</option>
            </select>
        </div><!-- Género -->
    
        <div class="browser-default col s12"> <!-- Especie -->
            <label>Especie</label>
            <select class="browser-default" ng-model="especie" ng-change="cargarInsecto(especie)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="especie in especies" value={{especie.id}}>{{especie.especie}}</option>
            </select>
        </div><!-- Especie -->
    

        <div class="row">
           <div class="divider"></div>
        </div>
        
        <div class="browser-default col s12"> <!-- Estado -->
            <label>Estado</label>
            <select class="browser-default" ng-model="estado" ng-change="cargarMunicipios(estado)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="estado in estados" value={{estado.id}}>{{estado.descripcion}}</option>
            </select>
        </div><!-- Estado -->
        
        <div class="browser-default col s12"> <!-- Municipio -->
            <label>Municipio</label>
            <select class="browser-default" ng-model="municipio" ng-change="cargarBiomas(municipio)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="municipio in municipios" value={{municipio.id}}>{{municipio.descripcion}}</option>
            </select>
        </div><!-- Municipio -->
        
        <div class="browser-default col s12"> <!-- Bioma -->
            <label>Bioma</label>
            <select class="browser-default" ng-model="bioma" ng-change="cargarInsecto(bioma)">
                <option value="" disabled selected>Seleccione una opción</option>
                <option ng-repeat="bioma in biomas" value={{bioma.id}}>{{bioma.descripcion}}</option>
            </select>
        </div><!-- Bioma -->
        
        <div class="row">
            <div class="divider"></div>
        </div>    
    
    </div><!-- combos y boton-->
  
      <!-- Modal Structure -->
    <div id="modal1" class="modal">
        
        <div class="modal-content">
          <img src="" id="imagenModal" class="responsive-img"></img>
        </div>
        
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Cerrar</a>
        </div>
        
    </div>
    
    
    <div class="col s12 m8 l8"><!-- imagen -->
        <div ng-repeat="p in partesReq">
            <div class="col s12 m6 l3 card-panel">
                <img src="{{p.cover}}" alt="imagen de parte de insecto" class="responsive-img" onclick="escuchadores();"></img>
                <h3 class="flow-text">{{p.familia}}</h3>
                <h3 class="flow-text">{{p.especie}}</h3>
                <p class="flow-text">{{p.parte}}</p>
            </div>
        </div>
    </div><!-- imagen -->
    
  
    
</div><!-- combos, boton y galeria -->

